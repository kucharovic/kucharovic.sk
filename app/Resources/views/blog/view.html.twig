{% extends 'layout.html.twig' %}

{% block title post.title %}

{% block description post.description %}

{% block body %}
  <article itemprop="blogPost" itemscope itemtype="http://schema.org/BlogPosting">

    <header>
      <h1 itemprop="name headline">{{ block('title') }}</h1>
      <p>
        <time pubdate datetime="{{ post.publishedAt|date(constant('DATE_W3C')) }}" itemprop="datePublished">{{ post.publishedAt|localizeddate('long', 'none') }}</time>, <b>Štítky</b>:
        {% for tag in post.tags %}
            <a href="{{ path('post.tag', {'slug': tag.slug}) }}">{{ tag }}</a>{% if false == loop.last %}, {% endif %}
        {% endfor %}
      </p>
    </header>

    <div class="content" itemprop="articleBody">
    {{ post.perex|raw }}
    {{ post.content|raw }}
    </div>

  </article>

  <p>
    <a href="{{ path('post.list') }}">&larr; Späť na zoznam</a>
  </p>
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="/assets/css/monokai_sublime.css">
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="/assets/js/highlight.pack.js"></script>
  <script>
    hljs.initHighlightingOnLoad();
  </script>
{% endblock %}