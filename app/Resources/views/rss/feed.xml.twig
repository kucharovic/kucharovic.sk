<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
<channel>
    <title>Jakub Kucharovic weblog</title>
    <atom:link href="{{ url('rss') }}" rel="self" type="application/rss+xml" />
    <link>{{ url('post.list') }}</link>
    <description><![CDATA[Vývoj webových aplikácií…]]></description>
    <lastBuildDate>{{ posts|first.publishedAt|date(constant('DATE_RSS')) }}</lastBuildDate>
    <language>sk</language>
    {% for post in posts %}
    <item>
        <title>
            {{ post.title }}
        </title>
        <link>
            {{ url('post.view', { 'slug' : post.slug }) }}
        </link>
        <guid isPermaLink="false">
            {{ url('post.shortlink', { 'id' : post.id }) }}
        </guid>
        <pubDate>
            {{ post.publishedAt|date(constant('DATE_RSS')) }}
        </pubDate>
        {% for tag in post.tags %}
        <category>
            {{ tag }}
        </category>
        {% endfor %}
        <description>
            <![CDATA[{{ post.description }}]]>
        </description>
        </item>
    {% endfor %}
    </channel>
</rss>